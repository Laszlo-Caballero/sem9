@model sem9.Models.SustentacionFinal

@{
    ViewData["Title"] = "Crear Sustentación";
}

<h1>Crear Sustentación</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label for="Modalidad">Modalidad</label>
        <select asp-for="Modalidad" class="form-control">
            <option value="">-- Seleccionar --</option>
            <option value="Presencial">Presencial</option>
            <option value="Remoto">Remoto</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Calificacion">Calificación</label>
        <input asp-for="Calificacion" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Estado">Estado</label>
        <select asp-for="Estado" class="form-control">
            <option value="">-- Seleccionar --</option>
            <option value="Aprobado">Aprobado</option>
            <option value="Desaprobado">Desaprobado</option>
        </select>
    </div>
    <div class="form-group">
        <label for="IdTesis">Título de Tesis</label>
        <select asp-for="IdTesis" class="form-control" asp-items="ViewBag.TesisId"></select>
    </div>
    <div class="form-group">
        <label>Jurados</label>
        <select asp-for="SelectedJurados" class="form-control" asp-items="ViewBag.Jurados" multiple="multiple"></select>
    </div>
    <button type="submit" class="btn btn-success mt-3">Registrar</button>
</form>
